@model Btl.Models.FoodList

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>FoodList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodID" />
            <div class="form-group">
                <label asp-for="FoodName" class="control-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodImage" class="control-label"></label>
                <input asp-for="FoodImage" class="form-control" />
                <span asp-validation-for="FoodImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodDescription" class="control-label"></label>
                <input asp-for="FoodDescription" class="form-control" />
                <span asp-validation-for="FoodDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalID" class="control-label"></label>
                <select asp-for="LocalID" class="form-control" asp-items="ViewBag.LocalID"></select>
                <span asp-validation-for="LocalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

