@model Btl.Models.CheckoutList
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">

<!-- Bootstrap -->
<link type="text/css" rel="stylesheet" href="~/ProductAssets/css/bootstrap.min.css" />

<!-- Slick -->
<link type="text/css" rel="stylesheet" href="~/ProductAssets/css/slick.css" />
<link type="text/css" rel="stylesheet" href="~/ProductAssets/css/slick-theme.css" />

<!-- nouislider -->
<link type="text/css" rel="stylesheet" href="~/ProductAssets/css/nouislider.min.css" />

<!-- Font Awesome Icon -->
<link rel="stylesheet" href="~/ProductAssets/css/font-awesome.min.css">

<!-- Custom stlylesheet -->
<link type="text/css" rel="stylesheet" href="~/ProductAssets/css/style.css" />

<div class="section">
    <!-- container -->
    <form>
        <div class="container">
            <!-- row -->
            <div class="row">

                <div class="col-md-7">
                    <!-- Billing Details -->
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">Billing address</h3>
                        </div>

                        <div class="form-group">
                            <input asp-for="checkout.CheckoutFistName" class="input" type="text" name="first-name" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <input asp-for="checkout.CheckoutLastName" class="input" type="text" name="last-name" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <input asp-for="checkout.CheckoutEmail" class="input" type="email" name="email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input asp-for="checkout.CheckoutAddress" class="input" type="text" name="address" placeholder="Address">
                        </div>
                        <div class="form-group">
                            <input asp-for="checkout.CheckoutCity" class="input" type="text" name="city" placeholder="City">
                        </div>
                        <div class="form-group">
                            <input asp-for="checkout.CheckoutCountry" class="input" type="text" name="country" placeholder="Country">
                        </div>
                        <div class="form-group">
                            <input asp-for="checkout.CheckoutPhone" class="input" type="tel" name="tel" placeholder="Telephone">
                        </div>

                        <!-- Order notes -->
                        <div class="order-notes">
                            <textarea class="input" placeholder="Order Notes"></textarea>
                        </div>
                        <!-- /Order notes -->
                    </div>
                    <button value="Checkout" href="#" class="primary-btn order-submit">Place order</button>
                </div>

            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </form>
</div>