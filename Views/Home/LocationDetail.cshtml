@model Btl.Models.TravelLocation
@{
    ViewData["Title"] = "LocationDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Times New Roman', serif; /* Change the font to Times New Roman for a more newspaper-like feel */
        background-color: #f5f5f5; /* A lighter gray background */
    }

    h1 {
        color: #333; /* Darker color for the title */
        text-align: left; /* Align the title to the left */
        font-size: 2.5em; /* Larger font size for the title */
        border-bottom: 2px solid #333; /* Add a border under the title */
        padding-bottom: 10px; /* Add some padding under the title */
        margin-top: 30px;
    }

    img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto;
        border: none; /* Remove the border */
        box-shadow: none; /* Remove the shadow */
        margin-top: 20px;
    }

    p {
        color: #333; /* Darker color for the text */
        font-size: 1.1em; /* Slightly larger font size */
        line-height: 1.6;
        margin: 20px 0;
        text-align: justify;
        text-indent: 30px; /* Indent the first line of each paragraph */
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="padding-top:200px;">@Model.LocationName</h1>
            <img src="@Model.LocationImage" alt="Location Image">
            <p>@Model.LocationDescription</p>
        </div>
    </div>
</div>
