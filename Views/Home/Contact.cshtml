@model Btl.Models.Contact
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="contact">
        <div class="container">
            <div class="contact-card">
                <div class="infos">
                    <h6 class="section-subtitle">Get Here</h6>
                    <h6 class="section-title mb-4">Contact Us</h6>

                    <div class="item">
                        <i class="ti-location-pin"></i>
                        <div class="">
                            <h5>Location</h5>
                            <p> Hà khẩu, Hạ Long ,Quảng Ninh</p>
                        </div>                          
                    </div>
                    <div class="item">
                        <i class="ti-mobile"></i>
                        <div>
                            <h5>Số điện thoại</h5>
                            <p>0325123150</p>
                        </div>                          
                    </div>
                    <div class="item">
                        <i class="ti-email"></i>
                        <div class="mb-0">
                            <h5> Địa chỉ Email</h5>
                            <p>Hung01082003@gmail.com</p>
                        </div>
                    </div>
                    <div class="item">
                        <i class="ti-world"></i>
                        <div class="mb-0">
                            <h5>Btl.com</h5>
                            <p>web@Btl.com</p>
                        </div>
                    </div>
                </div>
                <div class="form">
                    <h6 class="section-subtitle">Hỗ trợ 24/7</h6>
                    <h6 class="section-title mb-4">Phản hồi</h6>
                    <form>
                        <div class="form-group">
                            <input asp-for="ContactEmail" class="form-control form-control-lg" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required="">
                        </div>
                        <div class="form-group">
                            <input   asp-for="ContactName" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password" required="">
                        </div>
                        <div class="form-group">
                            <textarea asp-for="ContactDescription" id="" cols="30" rows="7" class="form-control form-control-lg" placeholder="Message"></textarea>
                        </div>
                        <button type="submit" value="Contact" class="btn btn-primary btn-block btn-lg mt-3">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>